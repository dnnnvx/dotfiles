configuration {
  drun-display-format: "{icon} {name}";
	show-icons: true;
	icon-theme: "Papirus-Dark";
	location: 2;
	fake-transparency: false;
	hide-scrollbar: true;
	bw: 0;
  fullscreen: true;
  show-icons: true;
	terminal: "st";
	sidebar-mode: false;
}

* {
  background-color: rgba(0,0,0,0);
  font: "Iosevka Term bold 10";
}

window {
  transparency: "real";
  fullscreen: true;
}

mainbox {
  children: [ inputbar, listview ];
  margin: 12% 34% 50% 34%;
  background-color: #000000;
  border-radius: 12;
  border: 1;
  border-color: #141414;
}

listview {
	columns: 2;
  padding: 8;
  spacing: 0;
}

element {
  text-color: #989898;
	orientation: vertical;
  padding: 8 12 8 12;
  border-radius: 6;
}

element selected {
  background-color: #0a0a0a;
  text-color: #ffffff;
  transition: 20;
}

element-icon {
	size: 40;
  horizontal-align: 0.5;
  vertical-align: 0.5;
}

element-text {
  horizontal-align: 0.5;
  vertical-align: 0.5;
  text-color: inherit;
}

inputbar {
	children: [entry];
  padding: 4 8 4 8;
  background-color: #000000;
  border: 0 0 1 0;
  border-color: #141414;
}

prompt {
  enabled: false;
}

entry {
  text-color: #d1d5da;
  padding: 8 12 8 12;
}
